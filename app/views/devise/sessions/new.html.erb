
<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2 style= "letter-spacing:8px">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
          <%= f.email_field :email, autocomplete: "off", autofocus: true, :class => "form-control ", :placeholder =>" Ex: net901703@gmail.com " %>
        </div>

        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder =>" Ex: xxxxxxxx " %>
        </div>

        
        <% if devise_mapping.rememberable? %> Remember Me
          <div class="form-group">
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-primary"%>
          <%= link_to "Forget password", new_user_password_path, :class => "btn btn-primary"%>
        </div>

        

      <% end %>
  </div>
</div>

