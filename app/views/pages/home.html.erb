
<%= form_tag search_path, method: :get do %>
	
	<div class="row">

		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Where you want to put ?", class: "form-control" %>
			
		</div>

		<div class="col-md-2">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
		
	</div>

<% end %>



<div class="row">
	<div class="col-md-2">
		
	</div>

	<div class="col-md-10">
		
	</div>
</div>

<br>

<div class="row">
	<% @places.each do |place| %>
		
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<%= image_tag place.photos[0].image.url(:medium) if place.photos.length > 0 %>
				</div>
				<div class="panel-body">
					<%= image_tag place.user.gravatar_url%>&nbsp;
					<%= link_to place.shop_name, place %>
				</div>
			</div>
		</div>

	<% end %>
</div>

<script>
	$(function(){
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
		});
	});

</script>