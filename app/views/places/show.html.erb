<h1>Places#show</h1>
<p>Find me in app/views/places/show.html.erb</p>

<div class="panel panel-defaut">
	<div class="panel-body">
		<!--IMG-->
		<div class="row">
			<div class="col-md-12">
				<%= image_tag @photos[0].image.url(), class: "img-responsive"%>
			</div>
		</div>

		<br>

		<!--Main-->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-3 text-center">
						<%= @place.user.nickname %>
					</div>
					<div class="col-md-9">
						<h4><%= @place.shop_name %></h4>
						<h5><%= @place.address %></h5> 

						<div class="row text-center row-space-1">
							<div class="col-md-3">
								<i class="fa fa-shopping-bag fa-2x"></i>
							</div>
							
							<div class="col-md-3">
								<i class="fa fa-suitcase fa-2x"></i>
							</div>
						</div>
						<div class="row text-center">
							<div class="col-md-3">
								Big: <%= @place.big_bag %>
							</div>
							
							<div class="col-md-3">
								Small: <%= @place.small_bag %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<!---->
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<h2>About this Place</h2>
				<%= @place.summary %>
			</div>
		</div>
	</div>
</div>
