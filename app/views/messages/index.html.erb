<div class="row">
	<div class="col-md-3 text-center">
		<%= image_tag avatar_url(@other), class: "img-circle "%><br>
		<strong>@other.nickname</strong>
		<%= link_to "View the profile", @other, class: "btn btn-default"%>
	</div>

	<div class="col-md-9">
		<div class="panel panel-defalt">
			<div class="panel-heading">
				Conversation with <%= @other.nickname %>
			</div>
			<div class="panel-body">
				<div class="container">
					<%= form_for [@conversation, @conversation.messages.new] do |f|%>
						<div class="form-group">
							<%= f.text_area :content, :id: "New Message", placeholder: "Add Message", class: "form-control"%>

							<%= f.hidden_field :user_id, :value: current_user.id%>
						<div class="actions">
							<%= f.submit "Send Message", class: "btn btn-primary"%>
						</div>

						</div>
					<% end %>
				</div>
			</div>
		</div>

		<div id="chat">
			<%= render 'messages'%>
		</div>
	</div>




</div>