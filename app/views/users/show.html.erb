<div class="row">
	<div class="col-md-3">
		<div class="center">
			<%= image_tag @user.gravatar_url, class:"avatar-full" %>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">Verification</div>
				<div class="panel-body">
						Email <br>
						Address
			</div>
	</div>

	<div class="col-md-9">
		<%= @user.nickname %>
	</div>

	<div class="description row-space-3 cetner">
		<h3>Profile description</h3>
		<% @user.try(:description)%>
	</div>
		
</div>


