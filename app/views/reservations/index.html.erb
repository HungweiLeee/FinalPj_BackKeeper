		
		<div class="col-md-2">

			<div class="place_photo">
				<div class="place_photo_2">
					<%= image_tag @place.photos[0].image.url(:medium)%>
				</div>
				
			</div>
		
			<i class="fa fa-clock-o" aria-hidden="true"></i>

			<div class="shop_name">
				<%= @place.shop_name %>
				<br>
					<div id='stars_<%= @place.id %>'></div>
				<br>
					<%= @place.address %>
				<br>
					<%= link_to "修改店家資訊" %>
			</div>	
		</div>

		<div class="col-md-10 show-right">
			<div id="header">
					<div class="logo">
						<div class="desktop">
							<%= image_tag "desktop.png" %>
						</div>
						
					</div>			
			</div>

			<div class="section">
				<div class="row ">
					<div class="container">
						<div class="search">
							<i class="fa fa-search fa-lg" aria-hidden="true" ></i>
							<span style="color: gray">Search</span> 
						</div>
						
					</div>
				</div>
			</div>

			<div id="body">
				
					<div class="col-md-4">
						<%= image_tag "待寄放.png" %>
							<div class="section" style="padding-top:20px">
								待寄放	
								<div class="order_status">
									
								</div>
							</div>		
						<div class="order_list">
							<div class="a">
								<% @wait_to_put.each do |f|%>
									<%= f.order_id %>
									<%= link_to "詳細資料", place_reservation_path(@place, f) %>
								<% end %>
						 	</div>
						 
							
						</div>
					</div>

					<div class="col-md-4">
						<%= image_tag "待取件.png" %>
							<div class="section" style="padding-top:20px">
								待取件
								<div class="order_status">
									
								</div>
							</div>		
						<div class="order_list">
							<div class="a">
								<% @wait_to_take.each do |f|%>
									<%= f.order_id %>
									<%= link_to "詳細資料", place_reservation_path(@place, f) %>
								<% end %>
						 	</div>
						 
							
						</div>
					</div>

					<div class="col-md-4">
						<%= image_tag "已完成.png" %>
							<div class="section" style="padding-top:20px">
								已完成
								<div class="order_status">
									
								</div>
							</div>		
						<div class="order_list">
							<div class="a">
								<% @compeleted.each do |f|%>
									<%= f.order_id %>
									<%= link_to "詳細資料", place_reservation_path(@place, f) %>
								<% end %>
						 	</div>
							
						</div>
					</div>

	
			</div>
		</div>


<script>
			$('#stars_<%= @place.id%>').raty({
				path: '/assets',
				readOnly: true,
				score: <%= @place.average_rating %>
			});
		</script>